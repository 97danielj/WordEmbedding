F#.
let sort (arr:'a[]) = 
 let arr = Array.copy arr
 let swap i j = 
 let tmp = arr.[i] in arr.[i] &lt;- arr.[j]; arr.[j] &lt;- tmp
 for i = arr.Length - 1 downto 0 do
 for j = 1 to i do
 if (arr.[j - 1] &gt; arr.[j]) then swap (j-1) j
 arr
